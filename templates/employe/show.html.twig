{% extends 'base.html.twig' %}

{% block title %}Detail d'une employe{% endblock %}

{% block body %}
    <h1>Detail d'une employe</h1>
    
    <h2>{{ employe }}</h2>
    <p>
        Entreprise : <a href="{{path('show_entreprise', {'id':employe.entreprise.id})}}">{{ employe.entreprise }}</a><br>
        Ville : {% if employe.ville %}{{ employe.ville }}{% else %}Ville non renseign√©e{% endif %}<br>
            
       
        Date de naissance : {{ employe.dateNaissance | date("d/m/y") }}<br>
        Date de embauche : {{ employe.dateEmbauche | date("d/m/y") }}
    </p>

{% endblock %}









































